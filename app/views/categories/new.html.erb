<h1>Add category</h1>
<%= form_for @category do |f| %>

<div class="form-group">
  <%= f.label :name %></br>
  <%= f.text_field :name, class=:'form-control' %><br/><br/>
</div>

<%= f.submit "Submit", class:'btn btn-primary' %>
<%= link_to "Cancel", categories_path,  class:'btn btn-default' %>


<% end %>
